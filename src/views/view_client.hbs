<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-header">
                    <center><img src="/images/jeff.jpeg" width="150px" alt=""></center>
                </div>
                <div class="card-body">
                    <form action="/client" method="POST">
                        <center><h4><b>Factorial de un numero</b></h4></center>
                        <div class="input-group">
                            <label class="col-form-label col-4 align-items-center" for="num1">Numero</label>
                            <div class="col-8 form-group">
                                <input class="form-control form-control-sm" placeholder="Digite un nÃºmero" type="number" name="num" id="num1">
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="col-6 mx-auto">
                                <button type="submit" class="btn btn-block btn-sm btn-success">Calcular</button>
                            </div>
                            {{#if suma}}
                            <div class="col-6 mx-auto">
                                <a href="/client" class="btn btn-sm btn-block btn-danger">Limpiar</a>
                            </div>
                            {{/if}}
                        </div>
                    </form>
                </div>
                {{#each registros}}
                    <div class="card-footer">
                        <h5><b>Resultado:</b>  {{ suma }}</h5>
                    </div>
                {{/if}}
                
            </div>
        </div>
    </div>
</div>