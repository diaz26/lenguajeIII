<div class="home" style="background-color: #212529; height: 700px;">
    <div class="home_slider_container">
        <div class="row">
            <div class="col-md-12 col-lg-10 mx-auto pt-3 pt-md-5 mt-5 pl-3 pr-3 pl-md-3 pr-md-3">
                <form action="/profile" method="post">
                    <center>
                        <div class="dropdown_text" style="font-size: 19px;">Información personal</div>
                    </center>
                    <hr style="border-color: white;">
                    <div class="input-group">
                        <label class="col-form-label col-md-3 ml-auto" for="email">
                            <div class="dropdown_text">Correo / usuario</div>
                        </label>
                        <div class="col-md-3 mr-auto form-group">
                            <input class="form-control form-control-sm" minlength="2" maxlength="50"
                                style="border-color: #22C5FE; color: #212529;" value="{{ user.email }}" disabled type="text"
                                name="email" id="email" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label class="col-form-label col-md-3 ml-auto" for="documento">
                            <div class="dropdown_text">Identificación</div>
                        </label>
                        <div class="col-md-3 mr-auto form-group">
                            <input class="form-control form-control-sm" style="border-color: #22C5FE; color: #212529;"
                                value="{{ user.identificacion }}" type="number" name="identificacion" id="documento"
                                required>
                        </div>
                    </div>

                    <div class="input-group">
                        <label class="col-form-label col-md-3 ml-auto" for="nombres">
                            <div class="dropdown_text">Nombres</div>
                        </label>
                        <div class="col-md-3 mr-auto form-group">
                            <input class="form-control form-control-sm" minlength="4" maxlength="20"
                                style="border-color: #22C5FE; color: #212529;" value="{{ user.nombres }}" type="text" name="nombres"
                                id="nombres" required>
                        </div>
                    </div>

                    <div class="input-group">
                        <label class="col-form-label col-md-3 ml-auto" for="apellidos">
                            <div class="dropdown_text">apellidos</div>
                        </label>
                        <div class="col-md-3 mr-auto form-group">
                            <input class="form-control form-control-sm" minlength="4" maxlength="20" style="border-color: #22C5FE; color: #212529;"
                                value="{{ user.apellidos }}" type="text" name="apellidos" id="apellidos" required>
                        </div>
                    </div>

                    <div class="input-group">
                        <label class="col-form-label col-md-3 ml-auto" for="genero_id">
                            <div class="dropdown_text">Género</div>
                        </label>
                        <div class="col-md-3 mr-auto form-group">
                            <select class="form-control form-control-sm" name="genero_id" id=""
                                style="border-color: #22C5FE; color: #212529;" required>
                                <option value="" disabled selected>
                                    <div class="dropdown_text">Seleccione el genero...</div>
                                </option>
                                <option value="1" {{#Condicion user.genero_id '==' '1'}} selected {{/Condicion }} >
                                    <div class="dropdown_text">Masculino</div>
                                </option>
                                <option value="2" {{#Condicion user.genero_id '==' '2'}} selected {{/Condicion }}>
                                    <div class="dropdown_text">Femenimo</div>
                                </option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-center" >
                        <button type="submit" class="btn btn-sm" style="
                            border-color: #22C5FE; 
                            color: #22C5FE; 
                            background-color: #212529;
                            font-family: 'Poppins', sans-serif;
                            text-transform: uppercase;
                            font-size: 14px;
                            ">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
        <hr style="border-color: white;">
        <div class="row">
            <div class="col-md-12 col-lg-10 mx-auto pl-3 pr-3 pl-md-3 pr-md-3">
                <form action="/profile/update_pass/" method="post">
                    <center>
                        <div class="dropdown_text" style="font-size: 19px;">Cambiar contraseña</div>
                    </center>
                    <hr style="border-color: white;">
                    <div class="input-group">
                        <label class="col-form-label col-md-3 ml-auto" for="pass">
                            <div class="dropdown_text">Contraseña</div>
                        </label>
                        <div class="col-md-3 mr-auto form-group">
                            <input class="form-control form-control-sm" minlength="4" maxlength="20" style="border-color: #22C5FE;"
                                placeholder="Contraseña" type="password" name="contrasena" id="pass" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label class="col-form-label col-md-3 ml-auto" for="pass_new">
                            <div class="dropdown_text">Contraseña nueva</div>
                        </label>
                        <div class="col-md-3 mr-auto form-group">
                            <input class="form-control form-control-sm" minlength="4" maxlength="20" style="border-color: #22C5FE;"
                                placeholder="Contraseña" type="password" name="contrasena_new" id="pass_new" required>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-sm" style="
                                    border-color: #22C5FE; 
                                    color: #22C5FE; 
                                    background-color: #212529;
                                    font-family: 'Poppins', sans-serif;
                                    text-transform: uppercase;
                                    font-size: 14px;
                                    ">Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>