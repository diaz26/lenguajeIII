<div class="home">
    <div class="home_slider_container" style="display: flex; align-items: center; justify-content: center;">
        <div class="background_image" style="background-image:url(../images/fondo.jpg)"></div>
        <div class="card" style="margin-top: 40px; width: 900px; border-radius: 10px; background-color: #212529; border-color: #22C5FE; color: #fff;">
            <form action="" method="post">
                <div class="card-header" style="border-color: #22C5FE">
                    <div class="dropdown_text">Registrate</div>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <label class="col-form-label col-md-3" for="email"><div class="dropdown_text">Correo / usuario</div></label>
                        <div class="col-md-3 form-group">
                            <input class="form-control form-control-sm" minlength="2" maxlength="50" style="border-color: #22C5FE;" placeholder="Correo / usuario" type="text" name="email" id="email" required>
                        </div>

                        <label class="col-form-label col-md-3" for="documento"><div class="dropdown_text">Identificación</div></label>
                        <div class="col-md-3 form-group">
                            <input class="form-control form-control-sm" style="border-color: #22C5FE;" placeholder="Identificación" type="number" name="identificacion" id="documento" required>
                        </div>
                    </div>

                    <div class="input-group">
                        <label class="col-form-label col-md-3" for="nombres"><div class="dropdown_text">Nombres</div></label>
                        <div class="col-md-3 form-group">
                            <input class="form-control form-control-sm" minlength="4" maxlength="20" style="border-color: #22C5FE;" placeholder="Nombres" type="text" name="nombres" id="nombres" required>
                        </div>

                        <label class="col-form-label col-md-3" for="apellidos"><div class="dropdown_text">apellidos</div></label>
                        <div class="col-md-3 form-group">
                            <input class="form-control form-control-sm" minlength="4" maxlength="20" style="border-color: #22C5FE;" placeholder="apellidos" type="text" name="apellidos" id="apellidos" required>
                        </div>
                    </div>

                    <div class="input-group">
                        <label class="col-form-label col-md-3" for="genero_id"><div class="dropdown_text">Género</div></label>
                        <div class="col-md-3 form-group">
                            <select class="form-control form-control-sm" name="genero_id" id="" style="border-color: #22C5FE;" required>
                                <option value="" disabled selected><div class="dropdown_text">Seleccione el genero...</div></option>
                                <option value="1"><div class="dropdown_text">Masculino</div></option>
                                <option value="2"><div class="dropdown_text">Femenimo</div></option>
                            </select>
                        </div>

                        <label class="col-form-label col-md-3" for="pass"><div class="dropdown_text">Contraseña</div></label>
                        <div class="col-md-3 form-group">
                            <input class="form-control form-control-sm" minlength="4" maxlength="20" style="border-color: #22C5FE;" placeholder="Contraseña" type="password" name="contrasena" id="pass" required>
                        </div>
                    </div>
                </div>
                <div class="card-footer" style="border-color: #22C5FE">
                    <div class="input-group">
                        <button type="submit" class="btn btn-sm btn-block" style="
                            border-color: #22C5FE; 
                            color: #22C5FE; 
                            background-color: #212529;
                            font-family: 'Poppins', sans-serif;
                            text-transform: uppercase;
                            font-size: 14px;
                            ">Enviar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
