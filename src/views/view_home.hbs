<!-- Products -->

<div class="products">
    <div class="section_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="products_container grid">
                        
                        {{#each productos }}
						<div class="product grid-item hot">
							<div class="product_inner">
								<div class="product_image" style="height: 300px; width: 250px;" align="center" >
									<img src="/images/{{ imagen }}" alt="">
									<!--div class="product_tag" style="width: auto;">Tendencia</div-->
								</div>
								<div class="product_content text-center" style="padding-top: 10px; padding-bottom: 10px;">
									<div class="row">
										<div class="col">
											<div class="product_title" style="margin-top: 7px;"><a href="/productos">{{ nombre }}</a></div>
										</div>
										<div class="col">
											<div class="product_price" style="margin-top: 0px;">$ {{ costo }}</div>
										</div>
									</div>
									<form action="/carrito" method="POST">
										<input type="hidden" value="{{ id }}" name="id">
										<input type="submit" class="product_button ml-auto mr-auto trans_200" style="
										font-size: 14px;
    									font-weight: 700;
                                        color: #212529;" value="AGREGAR">
									</form>
								</div>
							</div>	
						</div>
						{{/each }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
