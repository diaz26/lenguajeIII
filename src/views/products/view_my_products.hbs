<!-- Home -->

<div class="home">
	<div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="/images/fondo.jpg" data-speed="0.8"></div>
	<div class="home_container">
		<div class="home_content">
			<div class="home_title" style="font-size: 30px;"><b>PRODUCTOS</b> </div>
			<div class="breadcrumbs">
				<ul class="d-flex flex-row align-items-center justify-content-start" >
					<li><a style="color: black;" href="/">INICIO</a></li>
					<li style="color: black;">PRODUCTOS</li>
				</ul>
			</div>
		</div>
	</div>
</div>

<!-- Cart -->

<div class="cart_section">
	<div class="section_container">
		<div class="container">
			<div class="row pb-2">
				<div class="col-12">
					<div class="d-flex flex-row-reverse">
						<div class="button button_continue">
							<center>
								<a href="/products/new">
									<span>Agregar <i class="fa fa-plus"></i></span>
								</a>
							</center>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<table id="carritoDatatable" class="display nowrap" style="width:100%"> 
						<thead> 
							<tr>
								<th></th>
								<th>Código</th> 
								<th>Nombre</th> 
								<th>Categoría</th> 
								<th style="width: 80px; text-align: end;">Costo</th>
								<th style="width: 80px; text-align: center; ">Acciones</th>
							</tr> 
						</thead>
						<tbody>
            				{{#each productos }}
							<tr> 
								<td style="width: auto;"> <center> <img src="/images/{{ imagen }}" width="50" height="50"> </center> </td> 
								<td> {{ codigo }} </td> 
								<td> {{ nombre }} </td> 
								<td> {{ categoria }} </td> 
								<td style="text-align: end;"> $ {{ costo }} </td> 
								<td>
									<div class="dropdown">
										<button class="btn dropdown-toggle button button_continue m-0" style="height: auto; border-radius: 0px;" type="button" id="dropdownMenuButton" data-toggle="dropdown"
											aria-haspopup="true" aria-expanded="false">
											Acciones
										</button>
										<div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="border-radius: 0px; padding: 0px;">
											<a class="dropdown-item ml-auto" style="font-size: 14px;" href="/products/edit/{{ id }}"> <span> <i class="fa fa-edit"></i> Editar </span></a>
											<a class="dropdown-item ml-auto" style="font-size: 14px;" href="/products/delete/{{ id }}"> <span> <i class="fa fa-trash-o"></i> Eliminar </span></a>
										</div>
									</div>
                                </td> 
							</tr> 
            				{{/each }}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
